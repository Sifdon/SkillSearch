<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skillDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <TextView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_background"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edit_background"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:inputType="textMultiLine|textCapSentences"
        android:padding="@dimen/activity_horizontal_margin"
        android:hint="@string/background_hint"
        android:gravity="top" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/background_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="@dimen/half_margin"
            android:text="@string/next"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/box_accent"
            android:layout_gravity="center"
            android:onClick="toMap" />

        <LinearLayout
            android:id="@+id/skill_description_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/half_margin"
                android:layout_height="@dimen/half_margin"
                android:background="@drawable/circle_grey"
                android:layout_margin="@dimen/quarter_margin"/>
            <View
                android:layout_width="@dimen/half_margin"
                android:layout_height="@dimen/half_margin"
                android:background="@drawable/circle_grey"
                android:layout_margin="@dimen/quarter_margin"/>
            <View
                android:layout_width="@dimen/half_margin"
                android:layout_height="@dimen/half_margin"
                android:background="@drawable/circle_accent"
                android:layout_margin="@dimen/quarter_margin"/>
            <View
                android:layout_width="@dimen/half_margin"
                android:layout_height="@dimen/half_margin"
                android:background="@drawable/circle_grey"
                android:layout_margin="@dimen/quarter_margin"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>